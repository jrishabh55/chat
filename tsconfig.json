
{
  "compileOnSave": true,
  "compilerOptions": {
       "module": "commonjs",
       "noImplicitAny": true,
       "removeComments": true,
       "allowUnreachableCode": false,
       "strictNullChecks": true,
       "strictFunctionTypes": true,
       "noImplicitThis": true,
       "alwaysStrict": true,
       "sourceMap": true,
       "allowSyntheticDefaultImports": true,
       "esModuleInterop": true,
       "resolveJsonModule": true,
  },
   "include": [
       "src/**/*"
   ],
   "exclude": [
       "node_modules",
       "src/**/*.spec.ts"
   ]
}
